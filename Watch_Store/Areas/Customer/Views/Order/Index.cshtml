@model IEnumerable<OrderHeader>
@{
    Layout = "_LoginLayout";
}
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Order</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/Customer/Home">Home</a></li>
                    <li class="active">Order</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
@if (Model.Count() == 0)
{
    <p>No orders.</p>
}

else
{
    
    <div class="row">
        <div class=" table-responsive-md clom">
            <div class="row">
                <div class="col-md-12 table-responsive-md">

                    <table id="tblData" class="table table-striped table-info">
                        <thead>
                            <tr>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Total</th>                          
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model.OrderBy(u => u.Id))
                            {
                                <tr>
                                    <td>@obj.Id</td>
                                    <td>
                                        @obj.Name
                                    </td>
                                    <td>
                                        @obj.PhoneNumber
                                    </td>
                                    <td>
                                        @obj.ApplicationUser.Email
                                    </td>
                                    <td>
                                        @obj.OrderStatus
                                    </td>
                                    <td>
                                        @obj.OrderTotal
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>

        </div>
    </div>

}


