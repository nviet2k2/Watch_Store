@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}
@model ProductVM

<div class="row">
            <div class="col-md-12 table-responsive-md">
    <div class="col-12 text-center">
        <h2 class="text-black py-2"> @(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
    </div>
</div>
</div>
   <div class="col-md-12 table-responsive-md">
        <div class="row">
   <div class="card-body p-4">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Product.Id" hidden />
        <input asp-for="Product.ProductImage" hidden />
        <div class="row">
            <div class="col-10">
                <div class="border p-3">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ProductName" class="form-control border-0 shadow" />
                        <label asp-for="Product.ProductName" class="ms-2"></label>
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label asp-for="Product.ProductDescription" class="ms-2 text-muted"></label>
                        <textarea asp-for="Product.ProductDescription" class="form-control border-0 shadow"></textarea>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ProductQuantity" class="form-control border-0 shadow" />
                        <label asp-for="Product.ProductQuantity" class="ms-2"></label>
                        <span asp-validation-for="Product.ProductQuantity" class="text-danger"></span>
                    </div>


                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ProductPrice" class="form-control border-0 shadow" />
                        <label asp-for="Product.ProductPrice" class="ms-2"></label>
                        <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
                    </div>



                    <div class="form-floating py-2 col-12">
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <label asp-for="Product.CategoryId" class="ms-2"></label>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="file" name="file" class="form-control border-0 shadow" />
                        <label asp-for="Product.ProductImage" class="ms-2"></label>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (Model.Product.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                Back to List
                            </a>
                        </div>
                    </div>


                </div>
            </div>
            <div class="col-2">
                        <img src="@Model.Product.ProductImage " width="100%"
                             style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>

    </form>
</div>
</div>
    </div>




