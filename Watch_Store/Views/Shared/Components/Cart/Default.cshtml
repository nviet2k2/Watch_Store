@model ShoppingCartVM

<div class="dropdown">
	<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
		<i class="fa fa-shopping-cart"></i>
		<span>Your Cart</span>
		@await Component.InvokeAsync("ShoppingCart")
	</a>
	
	<div class="cart-dropdown">
		<form method="post" >
		<div class="cart-list">
				@foreach (var item in Model.ShoppingCartList)
				{
					<input type="hidden" asp-for="@item.Product.ProductQuantity">
			<div class="product-widget">
				<div class="product-img">
							<img src="@item.Product.ProductImage" alt="">
				</div>
				<div class="product-body">
					<h3 class="product-name"><a href="#">@item.Product.ProductName</a></h3>
							<h4 class="product-price"><span class="qty">&nbsp;x&nbsp;</span>@item.Count @item.Price.ToString("c")</h4>
				</div>

						@*<a class="delete" asp-action="remove" asp-route-cartId="@item.Id"><i class="fa fa-close"></i></a>*@

					
			</div>
			}
		
		</div>
		<div class="cart-summary">
			@*<small>3 Item(s) selected</small>*@
			<h5>SUBTOTAL:@Model.OrderHeader.OrderTotal.ToString("c")</h5>
		</div>
		<div class="cart-btns">
				<a href="/Customer/Cart">View Cart</a>
				<a href="/Customer/Cart/Checkout">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
		</div>
	</form>
	</div>
	
</div>